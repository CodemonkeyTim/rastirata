<?xml version="1.0" encoding="UTF-8" ?>
<widget 
	xmlns   		= 	"http://www.w3.org/ns/widgets"
    xmlns:gap   	= 	"http://phonegap.com/ns/1.0"
	xmlns:android 	= 	"http://schemas.android.com/apk/res/android"
	id				=	"com.vaintee.rastirata" 
	version="1.1.2">

	<platform name="android">
        <config-file parent="/*" platform="android" target="AndroidManifest.xml">
            <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
            <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
        </config-file>
    </platform>
	
	<name>Rastirata</name>
	
	<description>
		Rastirata mobile application
	</description>
	
	<author email="vaintee1@gmail.com" href="http://github.com/CodemonkeyTim">
		Teemu Vainio
	</author>
	
	
	<icon src="icon.png" />
	<icon src="icon.png" platform="android" />
	<icon src="icon.png" platform="ios" />
	
	<content src="index.html" />
	<access origin="*" />
	
	<gap:plugin name="cordova-plugin-android-permissions" source="npm" version="0.10.0" />
	<gap:plugin name="cordova-plugin-camera" 		source="npm" />
	<gap:plugin name="cordova-plugin-whitelist" 	source="npm" />
	<gap:plugin name="cordova-plugin-geolocation" 	source="npm" />
	
	<!-- iOS -->
	<preference name="StatusBarOverlaysWebView" value="false" />
	<preference name="exit-on-suspend" value="true" />

	<preference name="webviewbounce" value="false" />
	<!-- <preference name="DisallowOverscroll" value="true" /> -->
	
	<!-- All platforms -->
	<preference name="orientation" value="portrait" />
	<preference name="loadUrlTimeoutValue" value="700000" />
	
	<!-- <access origin="http://simpletimeurl.whatever" /> Has to be configured later -->
	
	<!-- 
	<gap:config-file platform="android" parent="/manifest/application">
		<activity android:launchMode="singleTop" />
	</gap:config-file>
	-->
</widget>






























